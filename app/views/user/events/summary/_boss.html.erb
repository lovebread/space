<div class="rows s_clear"></div>
<div class="tab tab01">
  <ul>
    <li class="hover"><span><%= link_to "BOSS斩杀", event_summary_url(@event, :step => 2) %></span></li>
  </ul>
</div>
<div class="appcontent01 formcontent">
  <div class="rows s_clear">
    <div class="fldid">增加被击杀的BOSS</div>
    <div class="fldvalue">
      <div class="selector" style="width:200px">
        <%= link_to_function '', :onclick => "Iyxzone.Event.Summary.Boss.selectBosses();" %>
        <input />
        <div id="friend-wrap" class="drop-wrap" style="display:none"> 
          <iframe src="" frameborder="0"></iframe>
          <div class="wrap-bg"></div>
          <div class="con">
            <div class="head s_clear">
              <h4 class="left"><span>选择被斩杀的BOSS</span></h4>
            </div>
            <ul class="checkboxes rows s_clear">
              <% @event.guild.bosses.each do |b| %>
                <li><span><%= check_box_tag '', 1, false, :boss_id => b.id %><%= "#{b.name}-#{b.reward}" %></span></li>
              <% end %>
            </ul>
            <div class="foot rows">
              <span class="button"><span><%= button_to_function "确定", "Iyxzone.Event.Summary.Boss.resetBosses()" %></span></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
  <table class="act-member-list space" cellpadding="0" cellspacing="0" width="100%">
    <thead>
      <tr>
        <td class="tl" style="border-right:0; width: 400px;">BOSS列表</td>
        <td style="border-left:0;border-right:0;">分值</td>
        <td style="border-left:0;width:100px"></td>
      </tr>
    </thead>
    <tbody id='bosses'>
      <%= render :partial => 'boss_info', :locals => {:bosses => session[:event_summary][:bosses]} %>
    </tbody>
    <tbody>
      <tr>
        <td>
          <div class="textfield" id='new_boss'><input value="点击添加新的BOSS名字" onclick="Iyxzone.Event.Summary.Boss.newBoss()" /></div>
          <div id='new_boss_name' style="display:none">
            <div class='textfield'><%= text_field_tag 'boss[name]', '', :onclick => "this.clear()" %></div>
          </div> 
        </td>
        <td>
          <div id='new_boss_reward' style='display:none'>
            <div class='textfield' style="width: 80px; margin: 0 auto;"><%= text_field_tag 'boss[reward]', '', :onclick => "this.clear()" %></div>
          </div>
        </td>
        <td>
          <div id='new_boss_submit' style='display:none'>
            <%= button_to_function '创建', "Iyxzone.Event.Summary.Boss.createBoss(this)" %>
            <%= link_to_function '取消', "Iyxzone.Event.Summary.Boss.cancelBoss(this)" %>
          </div>
        </td>
      </tr>
    </tbody>
    <tfoot>
      <td colspan="3">
        <span class="button w-l"><span><button type="submit" onclick="Iyxzone.Event.Summary.Boss.prev()">上一步</button></span></span>
        <span class="button w-l"><span><button type="submit" onclick="Iyxzone.Event.Summary.Boss.next()">下一步</button></span></span>
      </td>
    </tfoot>
  </table>
</div>

<% if @boss_ids.blank? %>
<%= javascript_tag "
  Iyxzone.Event.Summary.Boss.load(#{@event.id}, #{@event.guild_id}, '#{form_authenticity_token}', [], []);
  Iyxzone.Event.Summary.Boss.reset(); 
" %>
<% else %>
<%= javascript_tag "
  Iyxzone.Event.Summary.Boss.load(#{@event.id}, #{@event.guild_id}, '#{form_authenticity_token}', #{array_or_string_for_javascript @boss_ids}, #{array_or_string_for_javascript @boss_rewards});
  Iyxzone.Event.Summary.Boss.reset(); 
" %>
<% end %>
