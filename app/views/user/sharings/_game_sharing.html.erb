<% game = game_sharing.shareable %>
<div class="feed-list feed-share">
  <%= dig_link game_sharing %>
  <div class="feed-header">
    <div class="right">
      <%= ftime game_sharing.created_at %><br/>
      首次分享人：<%= avatar game.first_sharer, :with => '27px', :height => '27px' %>
    </div>
    <h3><a href="#" class="left"><img class="imgbox01" src="images/photo/photo11.png" alt="" /></a><span><%= game_link game %></span></h3>
    <p class="con rows"><span class="quote">“</span><%= game_sharing.reason %><span class="quote">”</span></p>
    <div class="feeds">
      <%= link_to_function "评论", "Iyxzone.Comment.toggleBox('sharing', #{game_sharing.id})" %>(<%= game_sharing.comments_count %>) | 
      <%= facebox_link "我也分享", new_sharing_url(:shareable_type => 'Game', :shareable_id => game.id) %><span>(<%= game.sharings_count %>)</span> | 
      <%= link_to "更多分享", sharings_url(:id => game.first_sharer.id) %>
    </div>
  </div>
</div>
<div id="sharing_comment_box_<%= game_sharing.id %>" style="display:none">
  <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => game_sharing, :recipient => nil} %>
</div>
