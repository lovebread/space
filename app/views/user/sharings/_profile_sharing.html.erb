<% profile = profile_sharing.shareable %>
<div class="feed-list feed-share">
  <%= dig_link profile_sharing %>
  <div class="feed-header">
    <div class="right">
      <%= ftime profile_sharing.created_at %><br/>
      首次分享人：<%= avatar profile.first_sharer, :with => '27px', :height => '27px' %>
    </div>
    <h3><a class='left' href='#'><%= avatar profile.user, :class => 'imgbox01' %></a><span><%= profile_link profile.user %></span></h3>
    <p class="con rows"><span class="quote">“</span><%= profile_sharing.reason %><span class="quote">”</span></p>
    <div class="feeds">
      <%= link_to_function "评论", "Iyxzone.Comment.toggleBox('sharing', #{profile_sharing.id})" %>(<%= profile_sharing.comments_count %>) | 
      <%= facebox_link "我也分享", new_sharing_url(:shareable_type => 'Profile', :shareable_id => profile.id) %><span>(<%= profile.sharings_count %>)</span> | 
      <%= link_to "更多分享", sharings_url(:id => profile.first_sharer.id) %>
    </div>
  </div>
</div>
<div id="sharing_comment_box_<%= profile_sharing.id %>" style="display:none">
  <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => profile_sharing, :recipient => nil} %>
</div>
