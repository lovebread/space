<div class="title01">
  <%= link_to_function '', "facebox.close();", :class => "icon-active icon-active-close" %>
  <h1>分享</h1>
</div>

<div id='errors'></div>
<% form_remote_for :sharing, :url => sharings_url(:shareable_type => params[:shareable_type], :link => params[:link], :shareable_id => params[:shareable_id]) do |f| %>
<div class='formcontent'>
  <div class="rows s_clear">
    <div class="fldid"><label for="name">分享标题：</label></div>
    <div class="fldvalue">
      <div class="textfield"><%= f.text_field 'title' %></div>
    </div>
  </div>
  <div class="rows s_clear">
    <div class="fldid"><label for="des">分享理由：</label></div>
    <div class="fldvalue">
      <%= f.text_area 'reason' %>
    </div>
  </div>
</div>
<div class="buttons s_clear">
  <table class="center" cellpadding="0"><tr><td>
    <span class="button"><span><button type="submit">完成</button></span></span>
    <span class="button button-gray"><span><button type="button" onclick="facebox.close();">取消</button></span></span>
  </td></tr></table>
</div>
<% end %>
