<% game = interested_game %>
<% attention = game.attentions.find(:first, :conditions => {:user_id => current_user.id, :game_id => game.id}) %>
<li id='<%= "attention_#{attention.id}" %>'><%= game_link game %><%= game.sale_date %><%= facebox_confirm 'x', game_attention_url(game, attention), {:method => :delete, :msg => "你不关注这个游戏了么?"} %></li>
